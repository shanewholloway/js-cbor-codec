import { roundToFloat16Bits as _f32_to_int, convertToNumber as _int_to_f32 } from '@petamoriken/float16/src/lib.js'

export default decode_half_float
export const half_float = decode_half_float
export function decode_half_float(u8) ::
  return _int_to_f32 @ (u8[0]<<8) | u8[1]

export function encode_half_float(value) ::
  const u16 = _f32_to_int(value)
  return u16

